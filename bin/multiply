#!/usr/bin/env ruby

$:.unshift(File.expand_path('../../lib', __FILE__))

require 'multiply'

texts = ARGV.map {|path| File.open(path) }

gen = Multiply::Generator.new(
  :texts  => texts,
  :format => "x x\nx x x\nx x x x\n\n"
)

puts gen.generate(1000)

